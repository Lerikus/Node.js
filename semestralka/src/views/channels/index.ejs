<div class="container">
  <div class="mt-4">
    <div class="channel-sidebar">
      <div class="sidebar-logo">
        <svg width="32" height="32" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" style="vertical-align: middle;"><circle cx="24" cy="24" r="24" fill="#FF9800"/><ellipse cx="24" cy="24" rx="14" ry="14" fill="#FFA726"/><ellipse cx="24" cy="24" rx="10" ry="10" fill="#FFF3E0"/><ellipse cx="24" cy="24" rx="7" ry="7" fill="#FF9800"/><path d="M24 10 Q26 18 34 18" stroke="#388E3C" stroke-width="3" fill="none" stroke-linecap="round"/></svg>
        <span style="font-weight: 700; color: #FF9800; font-size: 20px; margin-left: 8px; vertical-align: middle;">Clask</span>
      </div>
      <h2 style="text-align: center; color: #FFF3E0; margin-bottom: 24px;">Channels</h2>
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <a href="/channels/new" style="background-color: #4A154B; color: white; padding: 8px 16px; text-decoration: none; border-radius: 4px;">Create Channel</a>
      </div>
      
      <% if (channels.length === 0) { %>
        <p>No channels available. Create your first channel!</p>
      <% } else { %>
        <div style="margin-top: 20px;">
          <% channels.forEach(channel => { %>
            <div class="channel-header">
              <h3><a class="channel-link" href="/channels/<%= channel.id %>"><%= channel.name %></a></h3>
              <% if (channel.description) { %>
                <p class="channel-description"><%= channel.description %></p>
              <% } %>
              <div class="channel-meta">
                Created by <%= channel.createdBy %> on <%= new Date(channel.createdAt).toLocaleDateString() %>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </div>
</div>
